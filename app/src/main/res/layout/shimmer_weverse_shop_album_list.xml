<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgAlbum1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/light_gray"
        app:layout_constraintDimensionRatio="H,5:6"
        app:layout_constraintEnd_toStartOf="@+id/imgAlbum2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/imgAlbum1"
        app:layout_constraintEnd_toEndOf="@+id/imgAlbum1"
        app:layout_constraintTop_toBottomOf="@+id/imgAlbum1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPrice1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:background="@color/light_gray"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgAlbum1"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgAlbum2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/light_gray"
        app:layout_constraintDimensionRatio="H,5:6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAlbum1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/imgAlbum2"
        app:layout_constraintEnd_toEndOf="@+id/imgAlbum2"
        app:layout_constraintTop_toBottomOf="@+id/imgAlbum2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPrice2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:background="@color/light_gray"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgAlbum2"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle2" />

</androidx.constraintlayout.widget.ConstraintLayout>